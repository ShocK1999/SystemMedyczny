<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafx.Administration.HirePane">
    <top>
        <HBox spacing="20.0" BorderPane.alignment="CENTER">
            <children>
                <Button mnemonicParsing="false" onAction="#back" prefHeight="64.0" prefWidth="100.0" text="%return" />
                <VBox prefHeight="90.0" prefWidth="530.0">
                    <fx:include fx:id="topMenu" source="bar.fxml" />
                    <padding>
                        <Insets bottom="10.0" />
                    </padding>
                </VBox>
            </children>
        </HBox>
    </top>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <ScrollPane prefHeight="462.0" prefWidth="1280.0">
               <content>
                  <VBox prefHeight="236.0" prefWidth="1278.0" spacing="20.0">
                     <children>
                        <TextField fx:id="hire_name" promptText="%name">
                           <opaqueInsets>
                              <Insets left="20.0" right="20.0" />
                           </opaqueInsets>
                           <VBox.margin>
                              <Insets left="50.0" right="50.0" />
                           </VBox.margin>
                        </TextField>
                        <TextField fx:id="hire_surname" promptText="%surname">
                           <opaqueInsets>
                              <Insets left="20.0" right="20.0" />
                           </opaqueInsets>
                           <VBox.margin>
                              <Insets left="50.0" right="50.0" />
                           </VBox.margin>
                        </TextField>
                        <TextField fx:id="hire_post" promptText="%post">
                           <opaqueInsets>
                              <Insets left="20.0" right="20.0" />
                           </opaqueInsets>
                           <VBox.margin>
                              <Insets left="50.0" right="50.0" />
                           </VBox.margin>
                        </TextField>
                        <TextField fx:id="hire_salary" promptText="%salary">
                           <opaqueInsets>
                              <Insets left="20.0" right="20.0" />
                           </opaqueInsets>
                           <VBox.margin>
                              <Insets left="50.0" right="50.0" />
                           </VBox.margin>
                        </TextField>
                     </children>
                     <padding>
                        <Insets bottom="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </content>
            </ScrollPane>
            <GridPane alignment="CENTER">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#hire_ok_btn" prefHeight="26.0" prefWidth="590.0" text="%ok" textAlignment="CENTER" />
                  <Button alignment="CENTER" mnemonicParsing="false" onAction="#back" prefHeight="26.0" prefWidth="591.0" text="%cancel" GridPane.columnIndex="1">
                     <padding>
                        <Insets left="30.0" />
                     </padding>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets left="50.0" right="50.0" />
               </VBox.margin>
               <padding>
                  <Insets left="64.0" right="64.0" />
               </padding>
            </GridPane>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="10.0" />
         </padding>
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
